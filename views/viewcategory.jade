link(href='/stylesheets/style.css', rel='stylesheet')
link(href='/stylesheets/bootstrap.css', rel='stylesheet')
script(src='/javascripts/jquery-3.1.0.min.js')
script(src='/javascripts/bootstrap.min.js')
//-
  script var info = !{JSON.stringify(questions)}
block content
    h1.
        //Jeopardy Category: #{questions[0].discipline}
    div #[a(href='/classify4/#{questions[0].category}') Classify ALL ]
    div#map_canvas
    div.table-responsive
        table.table.table-sm.table-bordered.table-inverse.table-hover
            thead.thead-inverse
                tr
                    th #
                    th Value
                    th Question
                    th Answer
                    th Round
                    th Airdate / Show #
                    th Discipline
                    th Sub Discipline
            tbody
                each use, i in questions
                    tr
                        th(scope='row') #{i}
                        td #{use.value}
                        td #{use.question}
                        td 
                          div#answer #{use.answer}
                        td #{use.round}
                        td #{use.air_date} / #{use.show_number}
                        td #{use.discipline}
                        td #{use.subDiscipline}
