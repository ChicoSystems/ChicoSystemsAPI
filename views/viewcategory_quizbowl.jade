link(href='/stylesheets/style.css', rel='stylesheet')
link(href='/stylesheets/bootstrap.css', rel='stylesheet')
script(src='/javascripts/jquery-3.1.0.min.js')
script(src='/javascripts/bootstrap.min.js')
//-
  script var info = !{JSON.stringify(questions)}
block content
    h1.
        QuizBowl Category: #{questions[0].category}
    div #[a(href='/classify4/#{questions[0].category}') Classify Disciplines ]
    div #[a(href='/classify7/#{questions[0].category}') Classify SubDisciplines ]
    div#map_canvas
    div.table-responsive
        table.table.table-sm.table-bordered.table-inverse.table-hover
            thead.thead-inverse
                tr
                    th #
                    th Id
                    th Fold
                    th Category
                    th Question
                    th Answer
            tbody
                each use, i in questions
                    tr
                        th(scope='row') #{i}
                        td #{use.id}
                        td #{use.fold}
                        td #{use.category}
                        td #{use.raw}
                        td 
                          div#answer #{use.label}
